@model GymManagement.Models.FitnessCategory

<partial name="_ViewHeading" />

<div>
    <hr />
    <!-- Nav tabs -->
    <nav>
        <div class="nav nav-pills" id="myTabs" role="tablist">
            <button class="nav-link active" id="Basic-Tab" data-bs-toggle="tab" data-bs-target="#BasicPanel"
                    type="button" role="tab" aria-controls="BasicPanel" aria-selected="true">
                Basic Details
            </button>
            <button class="nav-link" id="Exercises-Tab" data-bs-toggle="tab" data-bs-target="#ExercisesPanel"
                    type="button" role="tab" aria-controls="ExercisesPanel" aria-selected="false">
                Exercises
            </button>
        </div>
    </nav>

    <!-- Tab panes -->
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" role="tabpanel" id="BasicPanel">
            <br />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
            </dl>
        </div>
        <div class="tab-pane fade ml-3" role="tabpanel" id="ExercisesPanel" aria-labelledby="Exercises-tab">
            <br />
        </div>
    </div>
</div>
<hr />
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <partial name="_BackToList" />
</div>
@section Scripts {
    <script type="text/javascript">
        $('.nav-link').click(function () {
            var activeTab = $(this).attr("id");
            switch (activeTab) {
                case 'Exercises-Tab': $('#ExercisesPanel').load('/FitnessCategory/ListOfExercisesDetails/@Model.ID');
                    break;
                default: break;
            };
        })
    </script>
}