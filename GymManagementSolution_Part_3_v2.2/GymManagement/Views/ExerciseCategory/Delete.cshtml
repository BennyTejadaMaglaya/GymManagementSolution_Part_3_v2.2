@model GymManagement.Models.ExerciseCategory

<partial name="_ViewHeading" />

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FitnessCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FitnessCategory.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exercise)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exercise.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FitnessCategoryID" />
        <input type="hidden" asp-for="ExerciseID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <partial name="_BackToList" />
    </form>
</div>
